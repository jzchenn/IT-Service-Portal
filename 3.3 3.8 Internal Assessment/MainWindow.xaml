<Window x:Class="TicketingPRGInternalAssessment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketingPRGInternalAssessment"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200"
        ResizeMode="NoResize">
    <Window.Resources>
        <!-- Place holder resource for combo boxes-->
        <Style x:Key="PlaceholderComboBoxStyle" TargetType="ComboBox">
            <!-- Setting the default properties -->
            <Setter Property="IsEditable" Value = "True"/>
            <Setter Property="IsReadOnly" Value = "True"/>
            <!-- Setting the Placeholder text -->
            <Style.Triggers>
                <Trigger Property="SelectedItem" Value = "{x:Null}">
                    <Setter Property="Text" Value="--Select an option in the combo box--"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="557*"/>
            <RowDefinition Height="113*"/>
        </Grid.RowDefinitions>
        <TabControl x:Name="TabControl" Grid.RowSpan="3">
            <TabItem Header="Login" IsEnabled="False" Margin="-1,-52,-3,50">
                <Grid x:Name="LoginButton" Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="33*"/>
                        <ColumnDefinition Width="22*"/>
                        <ColumnDefinition Width="343*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Rangitoto College IT Problem Ticket Login" HorizontalAlignment="Left" Margin="20,102,0,0" VerticalAlignment="Top" Height="92" Width="957" FontSize="50" Grid.Column="1" Grid.ColumnSpan="2"/>
                    <Label Content="Username:" HorizontalAlignment="Left" Margin="148,244,0,0" VerticalAlignment="Top" Height="48" Width="124" Grid.Column="2" FontSize="20"/>
                    <Label Content="Password:" HorizontalAlignment="Left" Margin="148,328,0,0" VerticalAlignment="Top" Height="47" Width="100" Grid.Column="2" FontSize="20"/>
                    <Button x:Name="LoginButton1" Content="LOGIN" HorizontalAlignment="Left" Margin="291,463,0,0" VerticalAlignment="Top" Click="LoginButton_Click" Width="282" Grid.Column="2" IsDefault="True" Height="50"/>
                    <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" Margin="277,256,0,0" VerticalAlignment="Top" Width="315" Grid.Column="2" Height="24"/>
                    <PasswordBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Margin="275,340,0,0" VerticalAlignment="Top" Width="314" Grid.Column="2" Height="24"/>
                </Grid>
            </TabItem>
            <TabItem Header="TicketCreate" IsEnabled="False" Margin="-4,-44,0,42">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="173*"/>
                        <ColumnDefinition Width="37*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="966*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="4" Content="Ticket Create&#xD;&#xA;" HorizontalAlignment="Left" Margin="307,66,0,0" VerticalAlignment="Top" FontSize="20"/>
                    <Label Grid.Column="2" Content="Category of the issue:&#xA;" HorizontalAlignment="Left" Margin="19,155,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
                    <Label Grid.Column="2" Content="Brief summary of issue:&#xD;&#xA;" HorizontalAlignment="Left" Margin="15,223,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
                    <Label Grid.Column="1" Content="Detailed description of issue:&#xD;&#xA;" HorizontalAlignment="Left" Margin="158,380,0,0" VerticalAlignment="Top" Grid.ColumnSpan="4"/>
                    <TextBox x:Name="BriefTextBox" MaxLength="255" Grid.Column="4" HorizontalAlignment="Left" Margin="107,223,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="524" Height="115" TextChanged="BriefTextBox_TextChanged"/>
                    <TextBox x:Name="DetailedTextBox" MaxLength="800" Grid.Column="4" HorizontalAlignment="Left" Margin="107,380,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="524" Height="147" TextChanged="DetailedTextBox_TextChanged"/>
                    <Button x:Name="SumbitTicketTextBox" Grid.Column="4" Content="Submit Ticket" HorizontalAlignment="Left" Margin="267,550,0,0" VerticalAlignment="Top" Click="SubmitTicketButton_Click" Height="64" Width="204"/>
                    <ComboBox x:Name="CategoryComboBox" Text="-- Select a category --" DisplayMemberPath="category_name" SelectedValuePath="category_id" Grid.Column="4" HorizontalAlignment="Left" Margin="107,155,0,0" VerticalAlignment="Top" Width="524" Height="33" SelectionChanged="CategoryComboBox_SelectionChanged"/>
                    <Label x:Name="SummaryTextCount" Grid.Column="4" Content="WORDCOUNTER 1" HorizontalAlignment="Left" Margin="651,226,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="DescriptionTextCount" Grid.Column="4" Content="WORDCOUNTER 2" HorizontalAlignment="Left" Margin="651,388,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="TicketManage" Margin="-221,0,217,0" Height="20" VerticalAlignment="Center" IsEnabled="False">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="36*"/>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="21*"/>
                        <ColumnDefinition Width="153*"/>
                        <ColumnDefinition Width="944*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="63*"/>
                        <RowDefinition Height="234*"/>
                        <RowDefinition Height="359*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Ticket Manage" HorizontalAlignment="Left" Margin="186,10,0,0" VerticalAlignment="Top" Grid.Column="4"/>
                    <DataGrid x:Name="TicketDataGrid" RowHeight="NaN" ItemsSource="{Binding ''}" Margin="39,36,63,0" IsReadOnly="True" SelectionMode="Single" Grid.ColumnSpan="4" Grid.Column="1" SelectionChanged="TicketDataGrid_SelectionChanged" AutoGenerateColumns="True" Grid.RowSpan="2"/>
                    <Label Content="Staff to assign:" HorizontalAlignment="Left" Margin="30,56,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.316,0.772" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"/>
                    <Label Content="Change category:" HorizontalAlignment="Left" Margin="17,122,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.316,0.772" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"/>
                    <Button x:Name="TicketButton" Grid.Column="3" Content="Update Ticket" HorizontalAlignment="Left" Margin="113,255,0,0" VerticalAlignment="Top" Click="AssignButton_Click" Grid.Row="2" Grid.ColumnSpan="2" Height="43" Width="130"/>
                    <Label Content="Update ticket's status:" HorizontalAlignment="Left" Margin="33,192,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Grid.Row="2" Grid.ColumnSpan="4"/>
                    <Button x:Name="DeleteButton" Grid.Column="4" Content="Delete Ticket" HorizontalAlignment="Left" Margin="269,15,0,0" Grid.Row="2" VerticalAlignment="Top" Click="DeleteButton_Click" Height="32" Width="154"/>
                    <ComboBox x:Name="AssignStaffComboBox" DisplayMemberPath="username" SelectedValuePath="account_id" HorizontalAlignment="Left" Margin="58,58,0,0" VerticalAlignment="Top" Width="240" Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="2" Height="25"/>
                    <ComboBox x:Name="ChangeCategoryComboBox"  DisplayMemberPath="category_name" SelectedValuePath="category_id" Grid.Column="3" HorizontalAlignment="Left" Margin="58,122,0,0" VerticalAlignment="Top" Width="240" Grid.Row="2" Grid.ColumnSpan="2" Height="27"/>
                    <ComboBox x:Name="StatusUpdateComboBox" DisplayMemberPath="status_name" SelectedValuePath="status_id" Grid.Column="3" HorizontalAlignment="Left" Margin="58,194,0,0" VerticalAlignment="Top" Width="240" Grid.Row="2" Grid.ColumnSpan="2" Height="23"/>
                    <TextBox x:Name="DetailedSummaryText" Grid.Column="4" HorizontalAlignment="Left" Margin="404,58,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="476" Height="258" HorizontalScrollBarVisibility="Auto" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
                    <Label x:Name="FilterByLabel" Grid.Column="4" Content="Filter by Assigned Admin:" HorizontalAlignment="Left" Margin="371,6,0,0" VerticalAlignment="Top"/>
                    <Label Content="-- Click on a ticket then click on the boxes below to select options to update ticket--" HorizontalAlignment="Left" Margin="22,25,0,0" Grid.Row="2" VerticalAlignment="Top" Grid.ColumnSpan="5"/>
                    <Label Grid.Column="4" Content="Detailed Description:" HorizontalAlignment="Left" Margin="582,29,0,0" Grid.Row="2" VerticalAlignment="Top"/>
                    <ComboBox x:Name="FilterComboBox" DisplayMemberPath="username" SelectedValuePath="account_id" HorizontalAlignment="Left" Margin="515,8,0,0" VerticalAlignment="Top" Width="240" Grid.Column="4" Height="25" SelectionChanged="FilterComboBox_SelectionChanged"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
